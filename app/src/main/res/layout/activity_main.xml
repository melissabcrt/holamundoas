<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FA1515"
    android:backgroundTint="#EC2E2E"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvSaludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ED1B1B"
        android:backgroundTint="#3E4DA1"
        android:drawableEnd="@android:drawable/btn_star_big_on"
        android:fontFamily="@font/abril_fatface"
        android:rotationX="8"
        android:rotationY="24"
        android:text="@string/saludo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Adios Mundo!" />

</androidx.constraintlayout.widget.ConstraintLayout>